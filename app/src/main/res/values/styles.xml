<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryLight">@color/colorLightPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDark</item>
        <item name="colorSecondary">@color/colorLightSecondary</item>
        <item name="colorSecondaryDark">@color/colorLightSecondaryDark</item>
        <item name="colorSecondaryLight">@color/colorLightSecondaryLight</item>
        <item name="colorAccent">@color/colorLightAccent</item>
        <item name="default_bg_color">@color/Light_default_bg_color</item>
        <item name="icon_color">@color/Light_icon_color</item>
        <item name="icon_color_red">@color/Light_icon_color_red</item>
        <item name="red_inlens">@color/Light_red_inlens</item>
        <item name="cf_bg_color">@color/Light_cf_bg_color</item>
        <item name="default_dim_bg">@color/Light_default_dim_bg</item>
        <item name="red_300">@color/Light_red_300</item>
        <item name="cf_alert_dialogue_dim_bg">@color/Light_cf_alert_dialogue_dim_bg</item>
        <item name="border">@color/Light_border</item>
        <item name="action_secondary">@color/Light_action_secondary</item>
        <item name="check_color">@color/Light_check_color</item>
        <item name="red_cancel_icon">@color/Light_red_cancel_icon</item>
        <item name="info_icon_color">@color/Light_info_icon_color</item>
        <item name="image_bg_color">@color/Light_image_bg_color</item>
        <item name="action_menu">@color/Light_actionMenuTextColor</item>

        <item name="android:fontFamily">@font/product_sans</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryLight">@color/colorDarkPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorSecondary">@color/colorDarkSecondary</item>
        <item name="colorSecondaryDark">@color/colorDarkSecondaryDark</item>
        <item name="colorSecondaryLight">@color/colorDarkSecondaryLight</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="default_bg_color">@color/Dark_default_bg_color</item>
        <item name="icon_color">@color/Dark_icon_color</item>
        <item name="icon_color_red">@color/Dark_icon_color_red</item>
        <item name="red_inlens">@color/Dark_red_inlens</item>
        <item name="cf_bg_color">@color/Dark_cf_bg_color</item>
        <item name="default_dim_bg">@color/Dark_default_dim_bg</item>
        <item name="red_300">@color/Dark_red_300</item>
        <item name="cf_alert_dialogue_dim_bg">@color/Dark_cf_alert_dialogue_dim_bg</item>
        <item name="border">@color/Dark_border</item>
        <item name="action_secondary">@color/Dark_action_secondary</item>
        <item name="check_color">@color/Dark_check_color</item>
        <item name="red_cancel_icon">@color/Dark_red_cancel_icon</item>
        <item name="info_icon_color">@color/Dark_info_icon_color</item>
        <item name="image_bg_color">@color/Dark_image_bg_color</item>
        <item name="action_menu">@color/Dark_actionMenuTextColor</item>
        <item name="android:fontFamily">@font/product_sans</item>
    </style>

    <style name="AppThemeGalleryLight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDark</item>
        <item name="colorAccent">@color/colorLightPrimaryLight</item>
    </style>


    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_60</item>
        <item name="colorControlHighlight">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>

    <style name="Checkbox.Blue" parent="@style/AppTheme">
        <item name="colorAccent">@color/blue_600</item>
        <item name="colorControlActivated">@color/blue_600</item>
        <item name="colorControlHighlight">@color/blue_600</item>
        <item name="colorControlNormal">@color/grey_40</item>
        <item name="colorPrimary">@color/blue_600</item>
        <item name="fontFamily">@font/base_font</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleAlpha">1.5</item>
        <item name="mrl_rippleColor">?attr/colorPrimary</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
    </style>

    <style name="RippleStyleWhite2">
        <item name="mrl_rippleAlpha">1.5</item>
        <item name="mrl_rippleColor">?attr/colorPrimary</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
    </style>

    <style name="CalenderTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDark</item>
        <item name="colorAccent">@color/colorLightPrimaryLight</item>
    </style>

    <style name="CalenderThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkPrimaryLight</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDark</item>
        <item name="colorAccent">@color/colorLightPrimaryLight</item>
    </style>

    <style name="NoActionBarThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkPrimaryLight</item>
    </style>

    <style name="BottomUpSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
