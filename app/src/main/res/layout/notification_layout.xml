<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/Light_default_dim_bg">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="12dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:id="@+id/titleLayout"
    >
    <Button
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:elevation="0dp"
        android:backgroundTint="@color/colorLightPrimary"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/ic_notification"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="InLens"
        android:fontFamily="@font/base_font"
        android:layout_centerVertical="true"
        android:textSize="8sp"
        android:visibility="gone"
        android:textColor="@color/colorLightPrimary"
        />
</RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_collections"
        android:tint="@color/colorLightPrimary"
        android:layout_centerVertical="true"

        android:layout_marginLeft="16dp"
        android:background="@color/Light_default_bg_color"

        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"

        android:text="Open your Gallery"
        android:textColor="@color/colorLightPrimary"
        android:layout_below="@id/titleLayout"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
       />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerVertical="false"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="2dp"
        android:textSize="10sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:text="Tap to upload photos to Cloud-Album"
        android:textColor="@color/colorLightPrimary"
        />
</RelativeLayout>