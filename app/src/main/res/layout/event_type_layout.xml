<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    >

    <ImageButton
        android:id="@+id/event_done_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_closedialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Select Event Type"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:fontFamily="@font/base_font"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/event_type_ceremony_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:fontFamily="@font/base_font"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:checked="false"
            android:padding="8dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="#Ceremony" />

        <Button
            android:id="@+id/event_type_hangouts_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:fontFamily="@font/base_font"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:checked="false"
            android:padding="8dp"
            android:text="#Hangouts" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/event_type_party_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:fontFamily="@font/base_font"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:checked="false"
            android:padding="8dp"
            android:text="#Party" />

        <Button
            android:id="@+id/event_type_travel_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:fontFamily="@font/base_font"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:checked="false"
            android:padding="8dp"
            android:text="#Travel" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/event_type_wedding_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:checked="false"
            android:padding="8dp"
            android:fontFamily="@font/base_font"
            android:text="#Wedding" />

        <Button
            android:id="@+id/event_type_others_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:checked="false"
            android:fontFamily="@font/base_font"
            android:padding="8dp"
            android:text="Others" />

    </LinearLayout>


    <TextView
        android:id="@+id/selected_event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Selected Type :"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/base_font"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>