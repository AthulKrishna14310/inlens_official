<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/mytoolbar_layout"
            android:id="@+id/profile_activity_toolbar"
            >
        </include>

        <RelativeLayout
            android:id="@+id/profile_activity_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_activity_toolbar"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/profile_activity_user_info_container_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_activity_user_info_imageview"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/ic_account_200dp"/>

                <ImageButton
                    android:id="@+id/profile_activity_user_info_imagebutton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignEnd="@id/profile_activity_user_info_imageview"
                    android:layout_alignBottom="@id/profile_activity_user_info_imageview"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="#ffffff"
                    android:src="@drawable/ic_photo_camera"
                    />


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/profile_activity_user_info_progressbar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                style="@style/Widget.AppCompat.ProgressBar"
                android:indeterminateTint="@color/white"
                android:indeterminate="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/profile_activity_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_activity_user_info"
            android:layout_marginTop="10dp"
            android:text="User Name"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/profile_activity_useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_activity_username"
            android:layout_marginTop="10dp"
            android:text="UserName@mail.com"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/profile_activity_community_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="count"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/profile_activity_useremail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/profile_activity_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:layout_below="@id/profile_activity_community_count"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            >

        </LinearLayout>

        <TextView
            android:id="@+id/profile_preference_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Preferences"
            android:layout_below="@id/profile_activity_line1"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/profile_preference_background_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="⚫Background service️"
            android:layout_below="@id/profile_preference_header"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/profile_preference_battery_optimization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="⚫Battery optimization"
            android:layout_below="@id/profile_preference_background_service"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/profile_activity_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:layout_below="@id/profile_preference_battery_optimization"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            >

        </LinearLayout>



        <TextView
            android:id="@+id/profile_activity_recyclerview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All images"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:layout_below="@+id/profile_activity_line2"
            android:layout_marginTop="20dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_activity_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/profile_activity_recyclerview_title">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</ScrollView>