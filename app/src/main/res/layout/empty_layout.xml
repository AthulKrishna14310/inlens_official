<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/yxt"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="textStart"
        android:alpha="0.6"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="?attr/colorPrimary"
        android:text=">  Open any camera app to take photos." />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/yxt1"
        android:layout_below="@id/yxt"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="textStart"
        android:alpha="0.6"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="?attr/colorPrimary"
        android:text=">  Tap notification." />
    <ImageView
        android:layout_below="@id/yxt1"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:id="@+id/imgView"
        android:alpha="0.5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tuts_foreground"
        ></ImageView>



   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
       android:layout_alignParentBottom="true"
       android:text="Open Camera"
       android:padding="16dp"
       style="@style/Widget.MaterialComponents.Button.OutlinedButton"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginTop="4dp"
       android:id="@+id/CloseButtonTextView"
       />
</RelativeLayout>