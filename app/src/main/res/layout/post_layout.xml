<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"

    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="0.10dp">


    <android.support.v7.widget.CardView
        android:id="@+id/post_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/post_layout_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/post_layout_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:minHeight="135dp"
                android:scaleType="center"
                android:src="@drawable/ic_cover_alt_black_24dp" />

            <ProgressBar
                android:id="@+id/post_layout_progressbar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"

                android:indeterminateTint="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_layout_userimageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_account_circle"
                android:visibility="gone" />

            <TextView
                android:id="@+id/post_layout_usernametextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:maxLength="20"
                android:text="User"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>