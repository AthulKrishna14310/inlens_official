<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">


    <android.support.v7.widget.CardView
        android:id="@+id/post_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/post_layout_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_layout_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:minHeight="135dp"
                android:scaleType="center"
                android:src="@drawable/ic_cover_alt_black_24dp" />

            <ProgressBar
                android:id="@+id/post_layout_progressbar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"

                android:indeterminateTint="@color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_layout_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_layout_userimageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_account_circle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/post_layout_usernametextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:maxLength="20"
            android:text="username"
            android:textAlignment="center"
            android:textSize="8sp"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>