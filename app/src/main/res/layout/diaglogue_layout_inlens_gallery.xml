<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/button_bg"
    android:layout_marginTop="10dp"
    android:id="@+id/rlx1"
    >
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bttx"
        android:background="@drawable/ic_block_black_24dp"></ImageButton>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/bttx"
        android:layout_marginLeft="10dp"
        android:text="Step 1: Close this app"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/bttx"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txt1"
        android:textColor="@color/red_300"
        android:text="Close this InLens app"
        ></TextView>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/rlx2"
        android:background="@drawable/button_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rlx1"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bttx1"
            android:background="@drawable/ic_camera_ga_alt_black_24dp"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/bttx1"
            android:layout_marginLeft="10dp"
            android:text="Step 2: Take photos "
            android:id="@+id/txt2"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/bttx1"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txt2"
            android:textColor="@color/red_300"
            android:text="Use any Camera applications to take photos"
            ></TextView>

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_below="@id/rlx2"
    android:background="@drawable/button_bg"
    android:layout_marginTop="10dp"
        android:id="@+id/rlx3"
    >
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bttx3"
        android:background="@drawable/ic_notifications_black_24dp"></ImageButton>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/bttx3"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt3"
        android:text="Step 3: Tap on Notification"
        ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/bttx3"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txt3"
            android:textColor="@color/red_300"
            android:text="Captured photo will be notified automatically. Please tap on the notification"
            ></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/rlx3"
        android:background="@drawable/button_bg"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bttx2"
            android:background="@drawable/ic_add_to_photos_black_24dp"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/txt4"
            android:layout_toRightOf="@+id/bttx2"
            android:layout_marginLeft="10dp"
            android:text="Step 4: Select photos and upload"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/bttx2"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txt4"
            android:textColor="@color/red_300"
            android:text="Select the images , and tap button to  upload"
            ></TextView>

    </RelativeLayout>


</RelativeLayout>