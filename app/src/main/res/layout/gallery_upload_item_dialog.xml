<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/gallery_upload_dialog_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/gallery_upload_dialog_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Uploading files"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/gallery_upload_dialog_progress_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        >

        <ProgressBar
            android:id="@+id/gallery_upload_dialog_progressbar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminate="false"
            android:max="100"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/gallery_upload_dialog_progress_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="10sp"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>