<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:background="?attr/default_bg_color"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/base_font"
        android:text="How to upload photos ?"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp" />

    <View
        android:id="@+id/view"
        android:layout_below="@id/textTitle"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="2dp"
        android:background="?attr/colorPrimary" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textTitle"
    android:padding="10dp"
    android:background="@drawable/button_bg"
    android:layout_marginTop="10dp"
    android:id="@+id/rlx1"
    >

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bttx"
        android:backgroundTint="?attr/colorPrimary"
        android:background="@drawable/ic_block_black_24dp"></ImageButton>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/base_font"
        android:layout_toRightOf="@+id/bttx"
        android:text="Step 1: Close this app"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:textSize="16sp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/bttx"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txt1"
        android:textColor="?attr/red_300"
        android:text="Close this InLens app"
        android:fontFamily="@font/base_font"
        ></TextView>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/rlx2"
        android:background="@drawable/button_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rlx1"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bttx1"
            android:backgroundTint="?attr/colorPrimary"
            android:background="@drawable/ic_camera_ga_alt_black_24dp"></ImageButton>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bttx1"
            android:text="Step 2: Take photos "
            android:fontFamily="@font/base_font"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/bttx1"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txt2"
            android:textColor="?attr/red_300"
            android:fontFamily="@font/base_font"
            android:text="Use any Camera applications to take photos"
            ></TextView>

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_below="@id/rlx2"
    android:background="@drawable/button_bg"
    android:layout_marginTop="10dp"
        android:id="@+id/rlx3"
    >
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bttx3"
        android:backgroundTint="?attr/colorPrimary"
        android:background="@drawable/ic_notifications_black_24dp"></ImageButton>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bttx3"
            android:fontFamily="@font/base_font"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:text="Step 3: Tap on InLens Notification"
            android:textSize="16sp"></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/rlx3"
        android:background="@drawable/button_bg"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bttx2"
            android:backgroundTint="?attr/colorPrimary"
            android:background="@drawable/ic_add_to_photos_24dp"></ImageButton>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/base_font"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bttx2"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:text="Step 4: Select photos and upload"
            android:textSize="16sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/bttx2"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txt4"
            android:textColor="?attr/red_300"
            android:fontFamily="@font/base_font"
            android:text="Select the images , and tap button to  upload"
            ></TextView>

    </RelativeLayout>


</RelativeLayout>