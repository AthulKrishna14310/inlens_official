<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    tools:text="event Header"
    android:gravity="center"
    android:checkable="true"
    app:chipCornerRadius="16dp"
    app:closeIconEnabled="true"
    app:closeIconTint="?attr/colorPrimary"
    android:padding="8dp"
    app:iconEndPadding="4dp"
    app:closeIconEndPadding="4dp"
    android:layout_margin="4dp"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
    android:textColor="?attr/colorPrimary"
    app:checkedIcon="@drawable/ic_check_black_24dp"
    app:checkedIconTint="?attr/colorPrimary"
    app:checkedIconEnabled="true"
    app:chipBackgroundColor="?attr/image_bg_color"
    app:chipStrokeWidth="0.2dp"
    app:chipStrokeColor="?attr/colorPrimary"
    >

</com.google.android.material.chip.Chip>