<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="32dp"
    android:layout_height="32dp"
    app:cardBackgroundColor="@color/default_bg_color"
    app:cardElevation="0dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    >



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_memberdp"
            android:foregroundTint="@color/colorSecondary"
            app:civ_border_color="@color/colorSecondary"
            app:civ_border_width="1dp"

            app:civ_fill_color="@color/default_dim_bg" />





</android.support.v7.widget.CardView>