<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="56dp"
    android:id="@+id/member_add_layout"
    android:layout_height="56dp"
    android:layout_marginBottom="8dp"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    >

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/member_circle"
            android:id="@+id/rl"
            android:padding="1dp"


            >
                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0.1dp"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="?attr/image_bg_color"
                    android:id="@+id/member_layout"
                    android:visibility="visible">

                        <ImageView
                            android:id="@+id/member_add"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"

                            android:src="@drawable/ic_add_memberdp"
                            android:tint="?action_secondary" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/participants_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/member_layout"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textSize="8sp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:maxLength="9"
                    android:text="username"
                    android:textColor="?attr/colorSecondary"
                    android:visibility="invisible" />
        </RelativeLayout>


</RelativeLayout>