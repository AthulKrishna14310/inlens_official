<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/member_add_layout"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackgroundBorderless">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:background="@drawable/member_circle"
        android:padding="1dp"


        >

        <androidx.cardview.widget.CardView
            android:id="@+id/member_layout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            app:cardBackgroundColor="?attr/image_bg_color"
            app:cardCornerRadius="18dp"
            app:cardElevation="0.1dp">

            <ImageView
                android:id="@+id/member_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_add_memberdp"
                android:tint="?action_secondary" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/participants_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/member_layout"
            android:layout_centerHorizontal="true"
            android:maxLength="9"
            android:text="username"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="?attr/colorSecondary"
            android:textSize="8sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/member_add_badge_textview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="?attr/red_cancel_icon"
        android:background="@drawable/member_circle"
        android:text="0"
        android:textColor="?attr/default_dim_bg"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        />


</RelativeLayout>